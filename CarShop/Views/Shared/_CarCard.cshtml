@model Car

<div class="col-xxl-4 col-lg-6 col-md-12 p-2 mt-5">
    <img src="@Model.Url" alt="@Model.Name">
    <div class="text-center p-2">
        <h3>@Model.Name</h3>
        <p>@Model.Title</p>
        <p>@Model.ShortDesc</p>
        <p>Price: $ @Model.Price</p>
        <a asp-controller="Cars" asp-action="CarDetails" asp-route-id="@Model.Id" class="manageBtn btn btn-info text-center">More details</a>
        <a asp-controller="Cart" asp-action="AddItem" asp-route-carId="@Model.Id" class="manageBtn btn btn-success text-center mx-2">Bye</a>
    </div>
</div>