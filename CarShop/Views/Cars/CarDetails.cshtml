@model Car
@{
    ViewData["Title"] = "CarDetails";
}

<h1 class="text-center text-uppercase mb-5">@Model.Name</h1>
<div class="container-xxl">
    <div class="row">
        <img src="@Model.Url" alt="@Model.Name" class="car-img col-md-6 col-xs-12 p-0" />
        <div class="offset-md-1 col-md-5 col-sm-12 col-xs-12">
            <p>@Model.Title</p>
            <p>Car price: @Model.Price</p>
            <a asp-controller="Home" asp-action="CarList" class="btn btn-primary manageBtn text-center">Back</a>
            <a asp-controller="Cart" asp-action="AddItem" asp-route-carId="@Model.Id" class="btn btn-success manageBtn text-center">Bye</a>
        </div>v
        <p class="mt-3">@Model.LongDesc</p>
    </div>
</div>

