@model CarShop.Models.ShopCart

@{
    ViewData["Title"] = "Cart";
}

<style>
    .table-row-h100px td {
        vertical-align: middle;
    }
</style>

<h1 class="text-center">Cart</h1>

<div class="container-md text-center">
    <table class="table">
        <thead>
            <tr>
                <th style="width:300px"></th>
                <th>
                    Name
                </th>
                <th>
                    Count
                </th>
                <th>
                    Price
                </th>
                <th>
                    Remove
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null)
            {
                @if (Model.Items != null)
                {
                    @foreach (var item in Model.Items)
                    {
                        <tr class="table-row-h100px">
                            <td>
                                <img src="@item.Car.Url" alt="@item.Car.Name" style="height:100px; width:300px">
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Car.Name)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Count)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Price)
                            </td>
                            <td>
                                <a asp-controller="Cart" asp-action="RemoveItem" asp-route-id="@item.Id" class="btn btn-danger px-3">✕</a>
                            </td>
                        </tr>
                    }
                }
            }
            else
            {
                <tr>
                    <td>
                        <p class="text-center"><b>StatusCode 404. Cart not found</b></p>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="text-center my-3">
        <a asp-controller="Home" asp-action="CarList" class="btn btn-primary">To shopping</a>
        <a asp-controller="Cart" asp-action="CreateOrder" class="btn btn-success">Make an order</a>
    </div>
</div>

