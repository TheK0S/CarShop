@model CarShop.Models.ShopCart

@{
    ViewData["Title"] = "Cart";
}

<h1 class="text-center">Cart</h1>

<table class="table">
    <thead>
        <tr>
            <th></th>
            <th>
                Name
            </th>
            <th>
                Count
            </th>
            <th>
                Price
            </th>
            <th></th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @if(Model.Items != null)
            {
                @foreach (var item in Model.Items)
                {
                    <tr>
                        <td>
                            <img src="@item.Car.Url" alt="@item.Car.Name" style="height:100px">
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Car.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Count)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Price)
                        </td>
                        <td>
                            <a asp-controller="Cart" asp-action="RemoveItem" asp-route-id="@item.Id" class="btn btn-danger px-2">✕</a>
                        </td>
                    </tr>
                }
            }
        }
        else
        {
            <tr>
                <td>
                    <p class="text-center"><b>StatusCode 404. Cart not found</b></p>
                </td>
            </tr>            
        }
    </tbody>
</table>
