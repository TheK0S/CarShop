@model IEnumerable<CarShop.Models.User>

<h1>Users table</h1>

<p class="text-center">
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Id)</th>
            <th>@Html.DisplayNameFor(model => model.UserName)</th>
            <th>@Html.DisplayNameFor(model => model.Email)</th>
            <th>@Html.DisplayNameFor(model => model.Created)</th>
            <th>@Html.DisplayNameFor(model => model.AccessLevel)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model) {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Id)</td>
                <td>@Html.DisplayFor(modelItem => item.UserName)</td>
                <td>@Html.DisplayFor(modelItem => item.Email)</td>
                <td>@Html.DisplayFor(modelItem => item.Created)</td>
                <td>@Html.DisplayFor(modelItem => item.AccessLevel)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-success manageBtn m-1">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-warning manageBtn m-1">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger manageBtn m-1">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
